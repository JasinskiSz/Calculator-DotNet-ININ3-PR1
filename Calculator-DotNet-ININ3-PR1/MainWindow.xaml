<Window x:Class="Calculator_DotNet_ININ3_PR1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_DotNet_ININ3_PR1"
        mc:Ignorable="d"
        Title="Calculator"
        Height="650" Width="400" FontSize="24">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label
            x:Name="resultWindow"
            Content="0"
            Grid.ColumnSpan="4"
            FontSize="36"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="10,0,10,0"/>
        <Button 
            x:Name="percentButton"
            Grid.Row="1"
            Content="%"/>
        <Button 
            x:Name="clearButton"
            Style="{StaticResource YellowRedButton}"
            Grid.Row="1"
            Grid.Column="2" 
            Content="C"/>
        <Button 
            x:Name="deleteButton"
            Style="{StaticResource YellowRedButton}"
            Grid.Row="1"
            Grid.Column="3"
            Content="🠐"/>
        <Button 
            x:Name="negativeButton"
            Grid.Row="6"
            Grid.Column="0"
            Content="+/-"/>
        <Button 
            Grid.Row="1"
            Grid.Column="1"
            Content="ln"/>
        <Button
            Grid.Row="2"
            Content="1/x"/>
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Content="x²"/>
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Content="√"/>
        <Button
            x:Name="divideButton"
            Click="OperationButtonClick"
            Grid.Row="2"
            Grid.Column="3"
            Content="/"/>
        <Button
            x:Name="multiplyButton"
            Click="OperationButtonClick"
            Grid.Row="3"
            Grid.Column="3"
            Content="*"/>
        <Button
            x:Name="oneButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="5"
            Content="1"/>
        <Button
            x:Name="twoButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="5"
            Grid.Column="1"
            Content="2"/>
        <Button
            x:Name="threeButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="5"
            Grid.Column="2"
            Content="3"/>
        <Button
            x:Name="fourButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="4"
            Content="4"/>
        <Button
            x:Name="fiveButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="4"
            Grid.Column="1"
            Content="5"/>
        <Button
            x:Name="sixButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="4"
            Grid.Column="2"
            Content="6"/>
        <Button
            x:Name="sevenButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="3"
            Content="7"/>
        <Button
            x:Name="eightButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="3"
            Grid.Column="1"
            Content="8"/>
        <Button
            x:Name="nineButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="3"
            Grid.Column="2"
            Content="9"/>
        <Button
            x:Name="zeroButton"
            Click="NumberButtonClick"
            Style="{StaticResource Digit}"
            Grid.Row="6"
            Grid.Column="1"
            Content="0"/>
        <Button
            Click="OperationButtonClick"
            x:Name="minusButton"
            Grid.Row="4"
            Grid.Column="3"
            Content="-"/>
        <Button
            Click="OperationButtonClick"
            x:Name="plusButton"
            Grid.Row="5"
            Grid.Column="3"
            Content="+"/>
        <Button
            x:Name="pointButton"
            Click="PointButtonClick"
            Grid.Row="6"
            Grid.Column="2" 
            Content="."/>
        <Button 
            x:Name="equalsButton"
            Style="{StaticResource YellowRedButton}"
            Grid.Row="6"
            Grid.Column="3"
            Content="="/>
    </Grid>
</Window>
